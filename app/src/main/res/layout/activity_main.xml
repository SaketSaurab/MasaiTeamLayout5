<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/nrupul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nrupul"
        android:textSize="25sp"
        android:background="#c4c4c4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="48dp"
        android:layout_marginHorizontal="23dp"
        android:layout_marginTop="56dp"
        />
    <TextView
        android:id="@+id/Prateek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prateek"
        android:textSize="25sp"
        android:background="#c4c4c4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="48dp"
        android:layout_marginLeft="46dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="56dp"
        />
    <View
        android:id="@+id/verticalline"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nrupul"
        android:layout_marginVertical="45dp"/>
    <TextView
        android:id="@+id/albert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Albert"
        android:textSize="25sp"
        android:paddingVertical="52dp"
        android:paddingHorizontal="119dp"
        android:background="#c2c2c2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/verticalline"
        />
    <TextView
        android:id="@+id/aman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aman"
        android:textSize="25sp"
        android:paddingVertical="52dp"
        android:layout_marginBottom="50dp"
        android:paddingHorizontal="119dp"
        android:background="#c2c2c2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/albert"
        />


</androidx.constraintlayout.widget.ConstraintLayout>